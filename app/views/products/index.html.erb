<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="gallery">
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <%= image_tag(product.photos[0].avatar.thumb.url, class: "img-rounded") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
            <div class="caption">
              <h3 style="text-align: center; color: #989998;"><%= product.title %></h3>

              <div class="row">
                <div class="col-md-offset-1 col-md-2" style="color: #989998;">
                  <h4>Â¥<%= product.price %></h4>
                </div>
                <div class="col-md-offset-5 col-md-2">
                  <%= link_to add_to_cart_product_path(product), method: :post do %>
                    <i class="fa fa-cart-plus" aria-hidden="true" style="font-size: 24px; color: #989998;"></i>
                  <% end %>
                </div>
              </div>
            </div>
        </div>
    <% end %>
  </div>
</div>
